# Order Processor Service - Configuration Template
# Copy and customize this file for different environments
# Supported environments: development, production

# ===========================================
# SERVER CONFIGURATION
# ===========================================
server.port=8083
server.servlet.context-path=/api

# ===========================================
# SPRING APPLICATION
# ===========================================
spring.application.name=order-processor-service
spring.profiles.active=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
spring.datasource.url=jdbc:postgresql://localhost:5432/OrderProcessorDb
spring.datasource.username=postgres
spring.datasource.password=YOUR_PASSWORD_HERE
spring.datasource.driver-class-name=org.postgresql.Driver

# ===========================================
# JPA/HIBERNATE CONFIGURATION
# ===========================================
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.jdbc.batch_size=25
spring.jpa.properties.hibernate.order_inserts=true
spring.jpa.properties.hibernate.order_updates=true

# ===========================================
# FLYWAY MIGRATION
# ===========================================
spring.flyway.locations=classpath:db/migration
spring.flyway.baseline-on-migrate=true

# ===========================================
# RABBITMQ CONFIGURATION
# ===========================================
spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=YOUR_RABBITMQ_USERNAME
spring.rabbitmq.password=YOUR_RABBITMQ_PASSWORD
spring.rabbitmq.virtual-host=/

# ===========================================
# MONITORING/ACTUATOR
# ===========================================
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always
management.health.db.enabled=true
management.health.rabbit.enabled=true

# ===========================================
# LOGGING
# ===========================================
logging.level.com.aioutlet.orderprocessor=INFO
logging.level.org.springframework.amqp=WARN
logging.level.org.hibernate.SQL=WARN

# ===========================================
# JWT SECURITY
# ===========================================
security.jwt.secret=YOUR_JWT_SECRET_AT_LEAST_32_CHARACTERS_LONG
security.jwt.issuer=aioutlet-auth-service
security.jwt.audience=aioutlet-order-processor-service

# ===========================================
# SAGA CONFIGURATION
# ===========================================
saga.timeout.payment=300
saga.timeout.inventory=180
saga.timeout.shipping=240
saga.retry.maxAttempts=3
saga.retry.backoffMultiplier=2
saga.retry.initialDelay=1000

# ===========================================
# MESSAGE BROKER
# ===========================================
messaging.exchange.name=orders.exchange
messaging.exchange.type=topic
messaging.queue.order-processor=order.processor.queue
messaging.routing-key.order-created=order.created
messaging.routing-key.order-updated=order.updated
messaging.routing-key.order-cancelled=order.cancelled

# ===========================================
# EXTERNAL SERVICES
# ===========================================
services.payment.url=http://localhost:8084/api/payments
services.inventory.url=http://localhost:8085/api/inventory
services.shipping.url=http://localhost:8086/api/shipping
services.notification.url=http://localhost:8087/api/notifications

# ===========================================
# SECURITY NOTES:
# ===========================================
# 1. Never commit real passwords to version control
# 2. Use different credentials for each environment
# 3. In production, use environment variables or secrets management
# 4. Rotate passwords and JWT secrets regularly
# 5. Use strong, unique passwords for each service

# ===========================================
# CONFIGURATION FILES:
# ===========================================
# application.properties              - Default configuration
# application.properties.example      - This template file
# application-development.properties  - Development-specific settings  
# application-production.properties   - Production-specific settings